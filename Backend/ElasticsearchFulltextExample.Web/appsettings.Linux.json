{
  "ConnectionStrings": {
    "DocumentDatabase": "Data Source=/Data/SQLite/documents.db"
  },
  "Application": {
    "BaseUri": "http://localhost:9000",
    "Tesseract": {
      "Executable": "tesseract",
      "TempDirectory": "/Data/Tesseract"
    },
    "DataProtection": {
      "Directory": "/Data/Keys"
    },
    "Elasticsearch": {
      "Uri": "http://host.docker.internal:9200",
      "IndexName": "documents"
    },
    "Indexer": {
      "IndexDelay": 10
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
